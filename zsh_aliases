# color grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
# color ls
alias ls='ls --color=auto'

alias ll='ls -lh'
alias la='ls -ACF'
alias l='ls -CF'
alias lla='ls -lhA'
alias bri='xrandr --output HDMI2 --brightness'
alias j="jobs"
alias transmissiond='/usr/bin/transmission-daemon --config-dir ~/.config/transmission/'
alias transmission-daemon='echo "DO NOT USE THIS"'
alias volmax='amixer set Master 100%'
alias volmute='amixer set Master mute'
alias volunmute='amixer set Master unmute'
alias less='zless -S'
alias tmux='tmux -2'

psgrep()
{
	ps -aux | grep $1 | grep -v grep
}

infos () { info --vi-keys --subnodes -o - "$@" | less; }

sbin2path()
{
    OLDPATH="$PATH"
    PATH="/usr/local/sbin:/usr/sbin:/sbin:$PATH"
}
